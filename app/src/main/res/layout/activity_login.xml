<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <ProgressBar
        android:indeterminate="true"
        android:visibility="gone"
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piggy"
        android:textColor="@color/greenarrow"
        android:textSize="50dp"
        />

    <EditText
        android:layout_gravity="center"
        android:id="@+id/txtUsuario"
        android:layout_marginTop="15dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:ems="10"
        android:textSize="20dp"
        android:hint="Correo Electronico"
        android:inputType="textEmailAddress"
        android:textColor="@color/BlancoLetra"
        android:textColorHint="@color/BlancoLetra" />

    <EditText
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:textColorHint="@color/BlancoLetra"
        android:id="@+id/txtContrase単a"
        android:ems="10"
        android:textSize="20dp"
        android:hint="Contrase単a"
        android:textColor="@color/BlancoLetra"
        android:inputType="textPassword" />

    <TextView
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:onClick="forgorPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/DarkBlue"
        android:textSize="22dp"
        android:text="多Olvidaste tu contrase単a?" />
    <TextView
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textColor="@color/DarkBlue"
        android:textSize="22dp"
        android:onClick="register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar" />

    <Button
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/round_botton3"
        android:textColor="@color/BlancoLetra"
        android:onClick="login"
        android:id="@+id/btnIniciarSesion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Iniciar Sesion" />

</LinearLayout>